@model MVCBooks.Models.Book

@{
    ViewData["Title"] = "Create";
}

<h1 style="text-shadow: 3px 3px white;">Tạo</h1>

<h4 style="color: white; font-size: 30px;">Khóa Học</h4>
<hr />
<div class="row" style="background-color: #426EB4; width: 35%; height: 100%; border-radius: 25px; color: white; font-size: 20px;">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="width: 350%;">
                <label asp-for="Title" class="control-label">Tên</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 350%">
                <label asp-for="ReleaseDate" class="control-label">Năm Sinh</label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 350%">
                <label asp-for="Genre" class="control-label">Ngôn Ngữ</label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 350%">
                <label asp-for="Price" class="control-label">Giá</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary"  style="font-size: 20px; width: 150px; height: 40px; background-color: white; color: black;"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="font-size: 20px; color: #fff;">Trở Lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
